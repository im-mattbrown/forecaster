<h1> New article </h1>

<%= form_with scope: :address, local: true do |form| %>
  <p>
    <%= form.label :street %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :city %><br>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.label :state %><br>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.label :zip %><br>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>